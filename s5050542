      void loadPages(String url1, String url2) {
        new Thread(() -> {
            try {
                jTextArea1.append("Thread 1 : started\n");
                jTextArea1.append("Thread 1 : getting " + url1 + "\n");
                jEditorPane1.setPage(url1);
                jTextArea1.append("Thread 1 : stopped\n");
                getHttpResponse(url1, "Thread 1");
            } catch (IOException ex) {
                Logger.getLogger(MultiThread.class.getName()).log(Level.SEVERE, null, ex);
            }
        }).start();
        
        new Thread(() -> {
            try {
                jTextArea1.append("Thread 2 : started\n");
                jTextArea1.append("Thread 2 : getting " + url2 + "\n");
                jEditorPane2.setPage(url2);
                jTextArea1.append("Thread 2 : stopped\n");
                getHttpResponse(url2, "Thread 2");
            } catch (IOException ex) {
                Logger.getLogger(MultiThread.class.getName()).log(Level.SEVERE, null, ex);
            }
        }).start();
    }
      
    public void getHttpResponse(String url, String caller) {
        try {
            
            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, java.util.List<String>> map = conn.getHeaderFields();

            for (Map.Entry<String, java.util.List<String>> entry : map.entrySet()) {
                if (caller.equals("Thread 1")) {
                    jTextArea1.append(caller + " " + entry.getKey() + " : " + entry.getValue() + "\n");
                } 
                if (caller.equals("Thread 2")){
                    jTextArea2.append(caller + " " + entry.getKey() + " : " + entry.getValue() + "\n");
                }
            }
            
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

